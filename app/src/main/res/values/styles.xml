<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent ="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedButton">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>


    <style name="SignChoosing">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#42a5f5</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUnChoosing">
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">#9d9d9e</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolBarTitle">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ToolBarNumberTitle">
        <item name="android:textSize">24dp</item>
        <item name="android:textColor">#ff742e</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>



    <style name="TopicTextViewButton">
        <item name= "android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WordName">
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WordCategory">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="WordActivityHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="ScoreTextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32dp</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopicName">
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RankingName">
        <item name="android:textSize">28dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopicDescriptionTopicActivity">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopicDescription">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CardViewElement">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>

    <style name="accountFragmentCardViewHeader">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textSize">32dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="accountFragmentCardViewElementTittle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="ExerciseAnswer">
        <item name="android:layout_marginLeft">32dp</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>