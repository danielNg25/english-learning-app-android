<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent ="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>



    <style name="SignChoosing">
        <item name="android:textSize">40dp</item>
        <item name="android:textColor">#42a5f5</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignUnChoosing">
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">#9d9d9e</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TopicTextViewButton">
        <item name= "android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WordName">
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WordCategory">
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="WordActivityHeader">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopicName">
        <item name="android:textSize">36dp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TopicDescriptionTopicActivity">
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">italic</item>
        <item name="fontFamily">DOSIS</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    
    <style name="CardViewElement">

        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
    </style>
</resources>