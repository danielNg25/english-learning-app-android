<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.TopicActivity"
    android:orientation="vertical"

    android:layout_margin="16dp">

    <TextView
        android:id="@+id/newWordTopicAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TopicTextViewButton"
        android:text="Học từ vựng"
        android:layout_weight="1"
        android:background="@color/topicBtn1"/>

    <TextView
        android:id="@+id/exerciseTopicAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TopicTextViewButton"
        android:text="Làm bài tập"
        android:layout_weight="1"
        android:background="@color/topicBtn2"/>

    <TextView
        android:id="@+id/testTopicAct"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/TopicTextViewButton"
        android:text="Làm bài kiểm tra"
        android:layout_weight="1"
        android:background="@color/topicBtn3"/>
</LinearLayout>